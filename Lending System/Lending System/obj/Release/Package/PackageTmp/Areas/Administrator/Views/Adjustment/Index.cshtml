
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-bind="visible: isAdjustmentListShowed" class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">Adjustment List</h6>
        <div class="heading-elements">
            <button data-bind="click: create" type="submit" class="btn bg-orange-400 btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b>Create new adjustment</button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table text-nowrap" id="adjustmentListTable">
            <thead>
            <tr>
                <th>Autonum</th>
                <th>Date</th>
                <th>Loan No</th>
                <th>Amount</th>
                <th>Remarks</th>
                <th class="text-center"><i class="icon-arrow-down12"></i></th>
            </tr>
            </thead>
        </table>
    </div>
</div>

<div data-bind="visible: isCreateModeShow" class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">Create adjustment</h6>
        <div class="heading-elements">
            @*<button data-bind="click: backToList" type="submit" class="btn btn-link"><i class="text-orange-600 icon-arrow-left13 position-left"></i> Back to list</button>*@
        </div>
    </div>
    <div class="panel-body">
        <form class="form-validate-jquery" action="#">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>Adjustment #</label>
                        <input type="text" data-bind="textinput: adjustmentNo" class="form-control" id="AdjustmentNo">
                    </div>
                    <div class="col-md-6">
                        <label>Date</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar22"></i></span>
                            <input type="text" data-bind="textinput: model.DateTrans" class="form-control daterange-single" id="DateTrans">
                        </div>
                    </div>
                </div>          
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label class="display-block text-semibold">Adjustment Type</label>
                        <label class="radio-inline">
                            <input type="radio" data-bind="value: model.TransType" name="radio-inline-left" class="control" required="required" aria-required="true" id="TransTypeDebitMemo">
                            Debit Memo
                        </label>

                        <label class="radio-inline">
                            <input type="radio" data-bind="value: model.TransType" name="radio-inline-left" class="control" required="required" aria-required="true" id="TransTypeCreditMemo">
                            Credit Memo
                        </label>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>Loan No</label>
                        <select name="LoanNo" data-placeholder="Select loan no" class="select required" id="LoanNo">
                            <option disabled selected></option>
                            @foreach (var item in ViewBag.LoanNo)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label>Amount</label>
                        <input type="text" data-bind="textinput: model.Amount" class="form-control text-semibold required" style="text-align: right" id="Amount">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <label>Remarks</label>
                        <textarea data-bind="textinput: model.Remarks" class="form-control" row="5" col="5" id="Remarks"></textarea>
                    </div>
                </div>
            </div>
                                    
            <div class="text-right">
                <button data-bind="click: backToList" type="submit" class="btn btn-link"><i class="text-orange-600 icon-arrow-left13 position-left"></i> Back to list</button>
                <button data-bind="click: save" type="submit" class="btn bg-success btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b><!--ko text: buttonCaption--><!--/ko--></button>
            </div>
        </form>
    </div>
</div>

@section scripts{

    <script type="text/javascript" src="~/Assets/js/plugins/forms/inputs/typeahead/handlebars.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/plugins/forms/inputs/alpaca/alpaca.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/plugins/forms/inputs/alpaca/price_format.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/plugins/forms/selects/select2.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/plugins/ui/prism.min.js"></script>
    <script type="text/javascript" src="~/Assets/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/Assets/js/plugins/forms/styling/uniform.min.js"></script>
    
    <script src="~/Areas/Administrator/Assets/model/adjustment.model.js"></script>
    <script src="~/Areas/Administrator/Assets/viewmodel/adjustment.viewmodel.js"></script>
}