@model Lending_System.Models.tbl_end_of_day_transactions
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNoScripts.cshtml";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/validation")
@Scripts.Render("~/Scripts/moment.min.js")
@Scripts.Render("~/Scripts/bootstrap-datetimepicker.min.js")

@Scripts.Render("~/Scripts/Datas/custom-common.js")

@Scripts.Render("~/Scripts/A-Custom/Tables/select2.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/toastr.min.js")

@Scripts.Render("~/Scripts/A-Custom/Tables/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/dataTables.responsive.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/dataTables.bootstrap.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/responsive.bootstrap.min.js")
@Scripts.Render("~/Scripts/bootstrap-select.min.js")
@Scripts.Render("~/Scripts/jquery.number.min.js")

<div class="container">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-8">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title" style="color:#ffffff"><strong>End Of Day Transaction List</strong></h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">

                    <table id="end-day-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>autonum</th>
                                <th>DateOrder</th>
                                <th>Date</th>
                                <th>Cash Begin</th>
                                <th>Cash Released</th>
                                <th>Cash Collected</th>
                                <th>Cash Pull-Out</th>
                                <th>Cash End</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>

                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <input type="button" value="New Transaction" class="btn btn-info pull-right" style="margin-right:20px" onclick="ShowModal()" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2">

    </div>
</div>

<div class="container">
    <div class="modal fade" id="Modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" align="center">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                    <h3 class="modal-title">New Transaction</h3>
                </div>
                <div id="div-forms">
                    <form id="pullout-form">
                        <div class="modal-body">
                            @using (Html.BeginForm(new { @id = "myForm" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div id="text-validation-msg">Date</div>
                                @Html.EditorFor(model => model.date_trans, new { htmlAttributes = new { @class = "form-control input-lg", @readonly = "true", @id = "txtdate_trans" } })

                                <div id="text-validation-msg">Cash Beginning</div>
                                @Html.EditorFor(model => model.cash_begin, new { htmlAttributes = new { @class = "form-control input-lg number", @style = "text-align:right", @readonly = "true", @min = "0", @id = "txtcash_begin" } })

                                <div id="text-validation-msg">Cash Released</div>
                                @Html.EditorFor(model => model.cash_release, new { htmlAttributes = new { @class = "form-control input-lg number", @style = "text-align:right", @readonly = "true", @min = "0", @id = "txtcash_release" } })

                                <div id="text-validation-msg">Cash Collected</div>
                                @Html.EditorFor(model => model.cash_collected, new { htmlAttributes = new { @class = "form-control input-lg number", @style = "text-align:right", @readonly = "true", @min = "0", @id = "txtcash_collected" } })

                                <div id="text-validation-msg">Cash Pulled-Out</div>
                                @Html.EditorFor(model => model.cash_pulled_out, new { htmlAttributes = new { @class = "form-control input-lg number", @style = "text-align:right", @readonly = "true", @min = "0", @id = "txtcash_pulled_out" } })

                                <div id="text-validation-msg">Cash Ending</div>
                                @Html.EditorFor(model => model.cash_end, new { htmlAttributes = new { @class = "form-control input-lg number", @style = "text-align:right", @readonly = "true", @min = "0", @id = "txtcash_end" } })
                            }

                        </div>
                        <div class="modal-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <button id="btn-save" type="button" class="btn btn-success btn-sm btn-block" onclick="Save()">Save</button>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <button id="btn-cancel" type="button" class="btn btn-danger btn-sm btn-block" onclick="Cancel()">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/Functions/EndDayTransaction/initialize.js")
@Scripts.Render("~/Scripts/Functions/EndDayTransaction/variables.js")
@Scripts.Render("~/Scripts/Functions/EndDayTransaction/datetimepicker.js")
@Scripts.Render("~/Scripts/Functions/EndDayTransaction/functions.js")
@Scripts.Render("~/Scripts/Functions/EndDayTransaction/modal.js")
@Scripts.Render("~/Scripts/Functions/EndDayTransaction/save.js")
