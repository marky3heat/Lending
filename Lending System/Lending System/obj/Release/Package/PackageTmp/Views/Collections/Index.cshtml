<div class="container">
    <div class="col-sm-1">

    </div>
    <div class="col-sm-10">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title" style="color:#ffffff"><strong>Payment List</strong></h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">

                    <table id="payment-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>autonum</th>
                                <th>Date</th>
                                <th>Ref No.</th>
                                <th>Name of Payor</th>
                                <th>Total Payment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>

                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    @*<a href="javascript:window.print()">Print</a>*@
                    <input type="button" value="Create New Payment" class="btn btn-info pull-right" style="margin-right:20px" onclick="Create()" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1">

    </div>
</div>

