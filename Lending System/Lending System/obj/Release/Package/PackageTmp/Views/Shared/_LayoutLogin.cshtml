<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lending System</title>



    @if (ViewBag.Title == "Login")
    {
        @Styles.Render("~/Content/bootstrap.min.css")
        @Styles.Render("~/Content/A-Custom/Login/login-style.css")
        @Styles.Render("~/Content/A-Custom/Login/login-style-orange-button-only.css")

        <!-- Website Font style -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
        <!-- Google Fonts -->
        <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
    }
    else if (ViewBag.Title == "Registration")
    {
        @Styles.Render("~/Content/bootstrap.min.css")
        @Styles.Render("~/Content/A-Custom/Login/login-style.css")
        @Styles.Render("~/Content/A-Custom/Login/login-style-orange-button-only.css")

        <!-- Website Font style -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
        <!-- Google Fonts -->
        <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
    }
    else
    {
        @Styles.Render("~/Content/metro-css")
        @Styles.Render("~/Content/A-Custom/Tables")
        @Styles.Render("~/Content/A-Custom/Login")
    }

    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
</head>
<body>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/validation")
    <script>
            $(document).ready(function () {
                $('#myForm').keypress(function (e) {
                    if (e.keyCode == 13)
                        $('#btn-login').click();
                });
            });

            var Login = function () {

            var data = $("#myForm").serialize();

            if (!$("#myForm").valid()) {
                return false;
            }

            $.ajax({
                type: "Post",
                url: "@Url.Action("Login", "Account")",
                data: data,
                success: function (response) {
                    if (response != "No user") {
                        //alert("Login Successful!");
                        window.location.href = "@Url.Action("Index", "Home")"
                    }
                    else {
                        alert("Login Failed!");
                        window.location.href = "@Url.Action("Login", "Account")"
                    }
                }
            })

            }
    </script>

    <div class="footer">

    </div>

</body>
</html>

