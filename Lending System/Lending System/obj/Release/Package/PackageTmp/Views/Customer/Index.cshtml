@model IEnumerable<Lending_System.Models.tbl_customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNoScripts.cshtml";
}

<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">

            <h3 class="panel-title" style="color:#ffffff"><strong>Customer List</strong></h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <div class="col-sm-12">
                    <table id="customer-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Customer No.</th>
                                <th>Customer Name</th>
                                <th>Address</th>
                                <th>Credit Limit</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                @*<a href="javascript:window.print()">Print</a>*@
                <input type="button" value="Create New Customer" class="btn btn-info pull-right" style="margin-right:20px" onclick="Create()" />
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var Create = function () {
        window.location.href = "@Url.Action("AddCustomer", "Customer")"
    }
    var RootUrl = '@Url.Content("~/")';
</script>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/validation")
@Scripts.Render("~/bundles/A-Custom/Tables")
@Scripts.Render("~/Scripts/Datas/customer-js.js")
@Scripts.Render("~/Scripts/Datas/custom-common.js")
