@using System.Threading

@{
    ViewBag.Title = "Print";
    Layout = "~/Views/Shared/_LayoutNoScripts.cshtml";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/validation")
@Scripts.Render("~/Scripts/moment.min.js")
@Scripts.Render("~/Scripts/bootstrap-datetimepicker.min.js")

@Scripts.Render("~/Scripts/Datas/custom-common.js")

@Scripts.Render("~/Scripts/A-Custom/Tables/select2.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/toastr.min.js")

@Scripts.Render("~/Scripts/A-Custom/Tables/jquery.dataTables.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/dataTables.responsive.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/dataTables.bootstrap.min.js")
@Scripts.Render("~/Scripts/A-Custom/Tables/responsive.bootstrap.min.js")
@Scripts.Render("~/Scripts/bootstrap-select.min.js")
@Scripts.Render("~/Scripts/jquery.number.min.js")

<div class="container">
    <div class="panel">
        <div class="panel-body">
            <div id="report-body">
                <div style="font-family: Calibri; font-size: 15px;">                   
                    <!--- Headers -->
                    <div class="table-responsive" style="width: 100%;">
                        <table style="font-family: Calibri; width: 100%;">
                            <tr>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                                <td class="col-lg-4" style="text-align: center; width: 300px; font-size: 18px;"><strong>RGL LENDING</strong></td>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                            </tr>
                            <tr>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                                <td class="col-lg-4" style="text-align: center; width: 300px; font-size: 12px;">Maa, Davao City</td>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                            </tr>                  
                            <tr>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                                <td class="col-lg-4" style="text-align: center; width: 300px;">&nbsp</td>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                            </tr>
                            <tr>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                                <td class="col-lg-4" style="text-align: center; width: 300px; font-size: 18px;"><strong>ACCOUNTS RECEIVABLE</strong></td>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                            </tr>
                            <tr>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                                <td class="col-lg-4" style="text-align: center; width: 300px; font-size: 12px;">As of @ViewBag.dateString</td>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                            </tr>  
                            <tr>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                                <td class="col-lg-4" style="text-align: center; width: 300px;">&nbsp</td>
                                <td class="col-lg-4" style="text-align: center; width: 100px;"></td>
                            </tr>
                        </table>
                    </div>
                    <!--- Details --->
                    <div class="table-responsive" style="width: 100%;">
                        <table class="table table-bordered" style="font-family: Calibri; font-size: 12px;">
                            <tr>
                                <th style="text-align: left; width: 100px;">Loan No</th>
                                <th style="text-align: left; width: 300px;">Customer Name</th>
                                <th style="text-align: left; width: 100px;">Due Date</th>
                                <th style="text-align: left; width: 100px;">Principal</th>
                                <th style="text-align: left; width: 100px;">Interest</th>
                                <th style="text-align: left; width: 100px;">Payment</th>
                                <th style="text-align: left; width: 100px;">Balance</th>
                            </tr>
                            @foreach (var item in ViewBag.receivableList)
                            {
                                <tr>
                                    <td style="text-align: left;">@item.loanNo</td>
                                    <td style="text-align: left;">@item.customerName</td>
                                    <td style="text-align: left;">@item.dueDate</td>
                                    <td style="text-align: right;">@item.principal</td>
                                    <td style="text-align: right;">@item.interest</td>
                                    <td style="text-align: right;">@item.payment</td>
                                    <td style="text-align: right;">@item.balance</td>
                                </tr>
                            }
                            <tr>
                                <td style="text-align: left;"></td>
                                <td style="text-align: left;"></td>
                                <td style="text-align: left;"></td>
                                <td style="text-align: right;"></td>
                                <td style="text-align: right;"></td>
                                <td style="text-align: right;"></td>
                                <td style="text-align: right;"><strong>@ViewBag.Balance1</strong></td>
                            </tr>
                        </table>
                    </div>
                    @if (ViewBag.count1 != 0)
                    {
                        <div class="table-responsive" style="width: 100%;">
                            <table class="table table-bordered" style="font-family: Calibri; font-size: 12px;">
                                <tr>
                                    <th style="text-align: left; width: 100px;">Loan No</th>
                                    <th style="text-align: left; width: 300px;">Customer Name</th>
                                    <th style="text-align: left; width: 100px;">Due Date</th>
                                    <th style="text-align: left; width: 100px;">Principal</th>
                                    <th style="text-align: left; width: 100px;">Interest</th>
                                    <th style="text-align: left; width: 100px;">Payment</th>
                                    <th style="text-align: left; width: 100px;">Balance</th>
                                </tr>
                                @foreach (var item in ViewBag.receivableList1)
                                {
                                    <tr>
                                        <td style="text-align: left;">@item.loanNo</td>
                                        <td style="text-align: left;">@item.customerName</td>
                                        <td style="text-align: left;">@item.dueDate</td>
                                        <td style="text-align: right;">@item.principal</td>
                                        <td style="text-align: right;">@item.interest</td>
                                        <td style="text-align: right;">@item.payment</td>
                                        <td style="text-align: right;">@item.balance</td>
                                    </tr>
                                }
                                <tr>
                                    <td style="text-align: left;"></td>
                                    <td style="text-align: left;"></td>
                                    <td style="text-align: left;"></td>
                                    <td style="text-align: right;"></td>
                                    <td style="text-align: right;"></td>
                                    <td style="text-align: right;"></td>
                                    <td style="text-align: right;"><strong>@ViewBag.Balance2</strong></td>
                                </tr>
                            </table>
                        </div>
                    }     
                    @if (ViewBag.count2 != 0)
                    {
                        <div class="table-responsive" style="width: 100%;">
                            <table class="table table-bordered" style="font-family: Calibri; font-size: 12px;">
                                <tr>
                                    <th style="text-align: left; width: 100px;">Loan No</th>
                                    <th style="text-align: left; width: 300px;">Customer Name</th>
                                    <th style="text-align: left; width: 100px;">Due Date</th>
                                    <th style="text-align: left; width: 100px;">Principal</th>
                                    <th style="text-align: left; width: 100px;">Interest</th>
                                    <th style="text-align: left; width: 100px;">Payment</th>
                                    <th style="text-align: left; width: 100px;">Balance</th>
                                </tr>
                                @foreach (var item in ViewBag.receivableList2)
                                {
                                    <tr>
                                        <td style="text-align: left;">@item.loanNo</td>
                                        <td style="text-align: left;">@item.customerName</td>
                                        <td style="text-align: left;">@item.dueDate</td>
                                        <td style="text-align: right;">@item.principal</td>
                                        <td style="text-align: right;">@item.interest</td>
                                        <td style="text-align: right;">@item.payment</td>
                                        <td style="text-align: right;">@item.balance</td>
                                    </tr>
                                }
                                <tr>
                                    <td style="text-align: left;"></td>
                                    <td style="text-align: left;"></td>
                                    <td style="text-align: left;"></td>
                                    <td style="text-align: right;"></td>
                                    <td style="text-align: right;"></td>
                                    <td style="text-align: right;"></td>
                                    <td style="text-align: right;"><strong>@ViewBag.Balance3</strong></td>
                                </tr>
                            </table>
                        </div>
                    }               
                    <!--- Footer --->
                    <div class="table-responsive" style="width: 100%;">
                        <table style="font-family: Calibri; width: 100%;">
                            <tr>
                                <td class="col-lg-3" style="text-align: center; width: 50px;"></td>
                                <td class="col-lg-3" style="text-align: center; width: 50px;"></td>
                                <td class="col-lg-6" style="text-align: right; width: 300px; font-size: 15px;"><strong>TOTAL RECEIVABLES @ViewBag.totalBalance</strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row col-md-4 pull-right">
                <div class="col-sm-6">
                    <div class="form-group">
                        <button id="print" type="button" class="btn btn-success btn-sm btn-block" onclick="Print('report-body')">Print</button>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <button id="cancel" type="button" class="btn btn-danger btn-sm btn-block" onclick="Cancel()">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/Functions/Receivables/initialize.js")
@Scripts.Render("~/Scripts/Functions/Receivables/datetimepicker.js")
@Scripts.Render("~/Scripts/Functions/Receivables/functions.js")
@Scripts.Render("~/Scripts/Functions/Receivables/datatables.js")
@Scripts.Render("~/Scripts/Functions/Receivables/save.js")
@Scripts.Render("~/Scripts/Functions/Receivables/print.js")